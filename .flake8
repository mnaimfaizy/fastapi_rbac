[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .venv,
    venv,
    .env,
    alembic,
    */migrations/*,
    docs/source/conf.py,
    old,
    build,
    dist,
    .eggs
per-file-ignores =
    __init__.py:F401,F403
    tests/*:S101
