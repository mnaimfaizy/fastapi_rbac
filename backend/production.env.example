REQUIRE_PASSWORD_CHANGE_DAYS=90
ENABLE_BRUTE_FORCE_PROTECTION=true
BRUTE_FORCE_TIME_WINDOW=3600
PASSWORD_MIN_AGE_HOURS=24
LOGIN_HISTORY_DAYS=90

#############################################
# Session Security
#############################################
