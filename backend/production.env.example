PREVENT_COMMON_PASSWORDS=true
PREVENT_SEQUENTIAL_CHARS=true
PASSWORD_PEPPER=your_unique_pepper_value_for_production # Add a strong, unique pepper
PREVENT_REPEATED_CHARS=true

#############################################
# Account Security Settings
#############################################
